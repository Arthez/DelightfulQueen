<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/md_red_700"
    >

    <com.droidsonroids.awesomeprogressbar.AwesomeProgressBar
        android:id="@+id/super_awesome_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/default_layout_padding"
        android:layout_centerInParent="true"
        apb:lineThickness="@dimen/apb_line_thickness"
        apb:animationDuration="1000"
        />

</RelativeLayout>
