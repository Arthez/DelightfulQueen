<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_red_700"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.droidsonroids.awesomeprogressbar.AwesomeProgressBar
        android:id="@+id/super_awesome_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_centerInParent="true"
        android:padding="@dimen/default_layout_padding"
        apb:animationDuration="1200"
        apb:circleRadius="@dimen/circle_size"
        apb:strokeThickness="@dimen/apb_line_thickness"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/super_awesome_progress_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/success_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_button_label"/>

        <Button
            android:id="@+id/failure_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/failure_button_label"/>

    </LinearLayout>

</RelativeLayout>
